{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimitOptions": {
    "QuotaExceededResponse": {
      "Content": "{{ \"message\": \" Too many request. {0} requests per {1} is allowed. Retry after {2}s. \" }}",
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true, //Tek tek end-point üzerinden sýnýrlamalar belirlenebiliyor. Mesela "customers" ile baþlayan end-pointe özel limit belirleyebiliyoruz. 
    "StackBlockedRequests": false, // dakikada 60 istek izin verilsin, saatte 1000. 1 dakikada 100 istek yaparsa kalan 40 istek 1 saat limiti için sayýlacak mý sayýlmayacak mý?
    //"RealIpHeader": "X-Real-Ip", //eðer arada load balancer varsa load balancera gelen orjinal ip request headerýna hangi key ile ekleniyorsa onu belirtmemiz gerekiyor.
    "HttpStatusCode": 429,
    //"IpWhitelist": [ "127.0.0.1", "::1" ],
    "IpWhitelist": [],
    "EndPointWhiteList": [
      "get:/api/product"
    ],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/weatherforecast",
        "Period": "5s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/product",
        "Period": "10s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/product/*",
        "Period": "30s",
        "Limit": 3
      }
    ]
  },
  //"IpRateLimitPolicies": {
  //  "IpRules": [
  //    {
  //      "Ip": "127.0.0.1",
  //      "Rules": {
  //        "Endpoint": "*",
  //        "Period": "60s",
  //        "Limit": 60
  //      }
  //    }
  //  ]
  //}
  "ClientRateLimitOptions": {
    "QuotaExceededResponse": {
      "Content": "{{ \"message\": \" Too many request. {0} requests per {1} is allowed. Retry after {2}s. \" }}",
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "ClientIdHeader": "X-ClientId",
    "ClientWhitelist": [ "client-dev" ],
    //"ClientWhitelist": [],
    "EndPointWhiteList": [
      "get:/api/product"
    ],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/weatherforecast",
        "Period": "5s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/product",
        "Period": "10s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/product/*",
        "Period": "30s",
        "Limit": 3
      }
    ]
  }
}
